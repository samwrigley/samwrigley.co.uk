{
    "private": true,
    "bundlesize": [
        {
            "path": "./public/js/app.js",
            "maxSize": "10 kB",
            "compression": "brotli"
        },
        {
            "path": "./public/css/app.css",
            "maxSize": "10 kB",
            "compression": "brotli"
        }
    ],
    "scripts": {
        "lint:php": "./vendor/bin/phpcs .",
        "lint:assets": "prettier --check '**/*.{js,ts,tsx,json,scss,md}'",
        "lint:fix": "prettier --write '**/*.{js,ts,tsx,json,scss,md}'",
        "lint": "npm run lint:php && npm run lint:assets",
        "test:size": "bundlesize",
        "cypress:open": "cypress open --browser chrome",
        "cypress:run": "cypress run --browser chrome --headless",
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production"
    },
    "devDependencies": {
        "@testing-library/cypress": "7.0.4",
        "autoprefixer": "10.2.5",
        "browser-sync": "2.26.14",
        "browser-sync-webpack-plugin": "2.3.0",
        "bundlesize": "0.18.1",
        "cypress": "6.7.1",
        "cypress-image-snapshot": "4.0.1",
        "laravel-mix": "6.0.13",
        "postcss": "8.2.8",
        "prettier": "2.2.1",
        "sass": "1.32.8",
        "sass-loader": "10.1.1"
    },
    "dependencies": {
        "tailwindcss": "2.0.3"
    }
}
