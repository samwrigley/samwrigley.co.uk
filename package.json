{
    "private": true,
    "bundlesize": [
        {
            "path": "./public/js/app.js",
            "maxSize": "10 kB",
            "compression": "brotli"
        },
        {
            "path": "./public/css/app.css",
            "maxSize": "10 kB",
            "compression": "brotli"
        }
    ],
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "post-commit": "git update-index --again"
        }
    },
    "scripts": {
        "lint:php": "./vendor/bin/phpcs .",
        "lint:assets": "prettier --check '**/*.{js,ts,tsx,json,scss,md}'",
        "lint:fix": "prettier --write '**/*.{js,ts,tsx,json,scss,md}'",
        "lint": "npm run lint:php && npm run lint:assets",
        "test:size": "bundlesize",
        "cypress:open": "cypress open",
        "cypress:run": "cypress run --headless --config video=false",
        "dev": "npm run development",
        "development": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "watch": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "watch-poll": "npm run watch -- --watch-poll",
        "hot": "cross-env NODE_ENV=development node_modules/webpack-dev-server/bin/webpack-dev-server.js --inline --hot --https --config=node_modules/laravel-mix/setup/webpack.config.js",
        "prod": "npm run production",
        "production": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --no-progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js"
    },
    "devDependencies": {
        "@testing-library/cypress": "7.0.0",
        "axios": "0.20.0",
        "browser-sync": "2.26.12",
        "browser-sync-webpack-plugin": "2.2.2",
        "bundlesize": "0.18.0",
        "cross-env": "7.0.2",
        "cypress": "5.2.0",
        "cypress-plugin-snapshots": "1.4.4",
        "husky": "4.2.5",
        "laravel-mix": "5.0.5",
        "laravel-mix-purgecss": "5.0.0",
        "lint-staged": "10.2.11",
        "prettier": "2.1.2",
        "resolve-url-loader": "3.1.1",
        "sass": "1.26.10",
        "sass-loader": "9.0.3",
        "vue-template-compiler": "2.6.11"
    },
    "dependencies": {
        "@primer/css": "15.1.0",
        "github-syntax-light": "0.5.0",
        "tailwindcss": "1.6.2"
    }
}
